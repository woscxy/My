<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:context=".MainActivity">
        <ImageView
            android:id="@+id/img_upLoad"

            android:layout_width="match_parent"

            android:layout_height="300.0dip"

            android:layout_margin="11.0dip"

            android:background=""

            android:clickable="true"

            android:contentDescription="@string/app_name"

            android:scaleType="center" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginLeft="23.0dip"

            android:layout_marginRight="23.0dip"

            android:orientation="horizontal" >


            <Button

                android:id="@+id/btn_fromAlbum_noCrop"

                android:layout_width="0dip"

                android:layout_height="wrap_content"

                android:layout_margin="11.0dip"

                android:layout_weight="1"

                android:gravity="center"

                android:text="相册+不裁减"

                tools:ignore="ButtonStyle" />


            <Button

                android:id="@+id/btn_fromCamera_noCrop"

                android:layout_width="0dip"

                android:layout_height="wrap_content"

                android:layout_margin="11.0dip"

                android:layout_weight="1"

                android:gravity="center"

                android:text="拍照+不裁减"

                tools:ignore="ButtonStyle" />

        </LinearLayout>


        <LinearLayout

            android:layout_width="match_parent"

            android:layout_height="wrap_content"

            android:layout_marginLeft="23.0dip"

            android:layout_marginRight="23.0dip"

            android:orientation="horizontal" >


            <Button

                android:id="@+id/btn_fromAlbum_Crop"

                android:layout_width="0dip"

                android:layout_height="wrap_content"

                android:layout_margin="11.0dip"

                android:layout_weight="1"

                android:gravity="center"

                android:text="相册+裁减"

                tools:ignore="ButtonStyle" />


            <Button

                android:id="@+id/btn_fromCamera_Crop"

                android:layout_width="0dip"

                android:layout_height="wrap_content"

                android:layout_margin="11.0dip"

                android:layout_weight="1"

                android:gravity="center"

                android:text="拍照+裁减"

                tools:ignore="ButtonStyle" />

        </LinearLayout>


        <Button

            android:id="@+id/btn_upLoad"

            android:layout_width="match_parent"

            android:layout_height="wrap_content"

            android:layout_margin="34.0dip"

            android:layout_marginTop="11.0dip"

            android:text="上    传" />

    </LinearLayout>


</ScrollView>